@model IEnumerable<CasCading.ViewModel.VmCountry>
@{
    int Idno = 1;
}


<div class="container">
    <div class="mt-3">
        <a asp-action="CreateOrUpdate" asp-controller="Country" class=" btn  btn-primary">Create</a>
    </div>
    <br/>
    <table class="table table-striped table-hover table-bordered" id="countryTable">
        <thead class="thead-dark ">
            <tr class="text-center">
            <th>#</th>
            <th>Country Name</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Idno</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="CreateOrUpdate" asp-controller="Country" asp-route-id="@item.Id" class=" btn btn-sm btn-primary">Edit</a> | 
                    <a asp-action="Delete" onclick="return alert('Are Your Sure?')" asp-controller="Country" asp-route-id="@item.Id" class=" btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            Idno++;
        }
        </tbody>
    </table>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $.noConflict();
        jQuery(document).ready(function ($) {
            $('#countryTable').DataTable();
        });
    </script>
}